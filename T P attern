function printT(n) {
    for (let i = 0; i < n; i++) {
        let row = "";

        // Top horizontal line
        if (i === 0) {
            for (let j = 0; j < n; j++) row += "* ";
        }
        // Vertical center line
        else {
            for (let j = 0; j < Math.floor(n / 2); j++) row += "  ";
            row += "*";
        }

        console.log(row);
    }
}

// Call the function
printT(7);
